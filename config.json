{
  "paths": {
    "src": {
      "js": {
        "vendor": "./vendor/**/*.js",
        "glob": "./src/js/**/*",
        "entry": "./src/js/app.js"
      },
      "css": {
        "glob": "./src/styl/**/*.styl",
        "entry": "./src/styl/styles.styl"
      },
      "html": "./src/index.html",
      "images": "./src/images/**/*"
    },
    "dest": {
      "path": "./public",
      "vendor": "./public/vendor",
      "js": "./public/js",
      "css": "./public/css",
      "images": "./public/images"
    }
  }
}
